<div class="container">

  <p>
    <strong>Title:</strong>
    <%= @assignment.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @assignment.description %>
  </p>

  <h2>Files</h2>
  <ul>
    <% @assignment.file_specs.each do |file| %>
      <li><%= file.name %></li>
    <% end %>
  </ul>

  <h2>Submissions</h2>
  <%= render @assignment.submissions %>

  <h2>Submit your code:</h2>
  <%= render 'submissions/form' %>

  <%= link_to 'Edit', edit_assignment_path(@assignment) %> |
  <%= link_to 'Back', assignments_path %>

</div>
